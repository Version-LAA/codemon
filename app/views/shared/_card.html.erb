<div class="card home-card m-4 border border-light" data-banners-target="cardtype"
  style="width: 15rem;">
  <div class="card-header">
    <h5 class="card-title mt-5 mx-3 d-flex"><%=name%></h5>
    <p class="card-banner" data-banners-target="cardbanner">
      <%=rare%>
    </p>
    <p class="card-text" ><strong >Type: </strong><%=type%></p>
    <p class="card-text"><strong>Size: </strong><%=size%></p>
  </div>
  <div class="border card-pic">
    <%= cl_image_tag(photo,
      height: 150,
      width: 200,
      crop: :scale,
      aspect_ratio: "4:3")%>
  </div>
  <%# <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/25.png" class="card-img-top border-bottom" alt="..."> %>
  <div class="card-body ">
    <p class="card-text">$<%=price%>/day</p>
    <%=link_to "view",pokemon_path(id),class:"btn btn-danger btn-lg"%>
  </div>
</div>
