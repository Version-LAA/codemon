<%=render "shared/navbar"%>
<div class="container mt-4">
  <h1><%=current_user.name%>'s Profile</h1>
  <br>
  <div> <h3>My Booking Request</h3></div>
  <div>
    <h3>My Pokemon</h3>
      <%=link_to "Post a New Pokemon",new_pokemon_path,class:"btn mb-3"%>
      <br>
      <table class="table table-light">
        <thead>
          <tr>
            <th scope="col">üê±</th>
